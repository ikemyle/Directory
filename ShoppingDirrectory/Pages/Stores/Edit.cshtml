@page "{storeId:int?}"
@model ShoppingDirrectory.Pages.Stores.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Model.TitleMessage</h1>

<form method="post">
    <input type="hidden" asp-for="MyStore.Id" />
    <div class="form-group">
        <label asp-for="MyStore.Name"></label>
        <input asp-for="MyStore.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="MyStore.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="MyStore.Address"></label>
        <input asp-for="MyStore.Address" class="form-control" />
        <span class="text-danger" asp-validation-for="MyStore.Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="MyStore.City"></label>
        <input asp-for="MyStore.City" class="form-control" />
        <span class="text-danger" asp-validation-for="MyStore.City"></span>
    </div>

    <div calss="form-group">
        <label>Sector</label>
        @Html.DropDownListFor(model => model.MyStore.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "None", new { @class = "form-control" })
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./List" class="btn btn-warning">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}